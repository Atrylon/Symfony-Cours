        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Page d'administration</h1>

        <h2>Bienvenue {{ app.user.firstname }} </h2>
        <ul>
            {% for user in users %}
                <li>
                    Utilisateur :{{ user.firstname }} {{  user.lastname }} <br />
                    Date de Naissance : {{ user.birthday|date('d/m/y') }} <br>

                    {% if user.roles[0] != 0 %}
                        {% dump user.roles|length %}
                        RÃ´le :
                        {% for role in user.roles %}
                            {% if role %}
                                <ul><li>{{ role }}</li></ul>
                            {% endif %}

                        {% endfor %}
                    {% endif %}
                    <a href="{{ path( 'user_remove', {'id': user.id}) }} "> Supprimer </a> <br><br>
                </li>

            {% endfor %}
        </ul>
    </div>
{% endblock %}
